<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="userInfoPrivate"
            type="mx.ipn.cic.geo.databindingactivities.UserInfoPrivate"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="mx.ipn.cic.geo.databindingactivities.DataBindingSecondSampleActivity">

        <Button
            android:id="@+id/firstNameDataBindingSecondSampleButton"
            style="?android:attr/borderlessButtonStyle"
            android:text="@{userInfoPrivate.firstName}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/lastNameDataBindingSecondSampleButton"
            style="?android:attr/borderlessButtonStyle"
            android:text="@{userInfoPrivate.lastName}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/updateNamesDataBindingSecondSampleButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/buttonBackgroundColor"
            android:text="@string/updateNamesDataBindingSecondSampleString"/>
    </LinearLayout>
</layout>
